<% content_for(:title) { "Sign up" } %>

<div class="mx-auto max-w-md px-4 py-16">
  <h1 class="text-2xl font-bold text-center">Create your account</h1>
  <p class="mt-2 text-center text-gray-500 text-sm">Free â€” save up to 3 searches</p>

  <% if @user.errors.any? %>
    <div class="mt-4 rounded-lg bg-red-50 p-4">
      <% @user.errors.full_messages.each do |msg| %>
        <p class="text-sm text-red-800"><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <form action="<%= signup_path %>" method="post" class="mt-8 space-y-4">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div>
      <label for="user_name" class="block text-sm font-medium text-gray-700">Name</label>
      <input type="text" name="user[name]" id="user_name" value="<%= @user.name %>" required autofocus
             class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none">
    </div>

    <div>
      <label for="user_email" class="block text-sm font-medium text-gray-700">Email</label>
      <input type="email" name="user[email]" id="user_email" value="<%= @user.email %>" required
             class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none">
    </div>

    <div>
      <label for="user_password" class="block text-sm font-medium text-gray-700">Password</label>
      <input type="password" name="user[password]" id="user_password" required minlength="8"
             class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none">
    </div>

    <div>
      <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700">Confirm password</label>
      <input type="password" name="user[password_confirmation]" id="user_password_confirmation" required
             class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none">
    </div>

    <button type="submit" class="w-full rounded-full bg-black py-3 text-white font-medium hover:bg-gray-800 transition">
      Create account
    </button>
  </form>

  <p class="mt-6 text-center text-sm text-gray-500">
    Already have an account? <a href="<%= login_path %>" class="text-indigo-600 hover:text-indigo-800">Log in</a>
  </p>
</div>
